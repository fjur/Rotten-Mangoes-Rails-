<h1>Movies#index</h1>
<p>Find me in app/views/movies/index.html.erb</p>

<p><%= link_to "Submit a New Movie", new_movie_path %></p>
<hr>
<% @movies.each do |movie| %>
  <h4><%= link_to movie.title, movie_path(movie) %>(<%= link_to "edit", edit_movie_path(movie) %>, <%= link_to "delete", movie_path(movie), :method => :delete, :"data-confirm" => "You sure?" %>)</h4>
  <p><%= movie.director %></p>
  <p><%= movie.runtime_in_minutes %></p>
  <p><%= movie.description %></p>
  <p><%= movie.poster_image_url %></p>
  <p><%= movie.release_date %></p>
<% end %>
