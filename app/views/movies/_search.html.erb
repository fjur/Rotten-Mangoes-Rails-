<%= form_tag(movies_path, method: "get") do %>
  <div>
    <%= label_tag(:name, "Name:") %>
    <%= text_field_tag(:name) %>
  </div>
  <div>
    <%= label_tag(:director, "Director") %>
    <%= text_field_tag(:director) %>
  </div>
  <div>
  <%= select_tag "duration", options_for_select(["Under 90 minutes","Between 90 and 120 minutes","Over 120 minutes"], params[:duration]) %>
  </div>

  <div>
    <%= submit_tag("Search") %>
  </div>
  
<% end %>
