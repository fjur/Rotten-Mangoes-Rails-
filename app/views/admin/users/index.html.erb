  <h2>Users </h2>

  <%= paginate @users %>

  <p> <%= link_to "Create a new User", new_admin_user_path %></p>

  <% @users.each do |user| %>
    <p>User First Name: <%= user.firstname %></p>
    <p>User Last Name: <%= user.lastname %></p>
    <p>User email: <%= link_to user.email, admin_user_path(user) %></p>
    <p>Password: <%= user.password_digest %></p>
    <p><%= link_to "delete", admin_user_path(user), :method => :delete, :"data-confirm" => "You sure?" %><p>
    <hr>
  <% end %>

